{
  "name": "server",
  "version": "1.0.0",
  "description": "Lattice Server - Social network backend",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && nodemon dist/server.js",
    "start": "node dist/server.js",
    "seed": "node dist/seeds/index.js",
    "test": "jest --detectOpenHandles",
    "clean": "npx rimraf node_modules dist tsconfig.tsbuildinfo package-lock.json",
    "clean-rebuild": "npx rimraf node_modules dist tsconfig.tsbuildinfo package-lock.json && npm install && npm run build"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.6.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lattice": "file:..",
    "mongoose": "^8.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.15.17",
    "nodemon": "^3.1.10",
    "typescript": "^5.8.3"
  }
}
