{
  "name": "server",
  "version": "1.0.0",
  "description": "Lattice Server - Social network backend",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "seed": "node dist/seeds/index.js",
    "test": "jest --detectOpenHandles",
    "dev:test": "npx nodemon src/server.ts"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,json,js",
    "exec": "npx tsc && node dist/server.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.3",
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.14.1",
    "@types/jest": "^29.5.4",
    "nodemon": "^3.1.0",
    "typescript": "^5.5.4"
  }
}
